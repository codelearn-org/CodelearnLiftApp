<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/carpoolTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
       		android:textSize="19sp"
            android:textColor="#222222"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/carpoolTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/stime_lbl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_stime"/>
            <TextView
                android:id="@+id/stime_entry"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/etime_lbl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_etime"/>

            <TextView
                android:id="@+id/etime_entry"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        
        </LinearLayout>


</LinearLayout>