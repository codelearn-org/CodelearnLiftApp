<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.codelearn.liftapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.codelearn.liftapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.codelearn.liftapp.CreateCarpoolActivity"
            android:label="@string/title_activity_create_carpool" >
        </activity>
        <activity
            android:name="org.codelearn.liftapp.CarpoolListActivity"
            android:label="@string/title_activity_carpool_list" >
        </activity>
        <activity
            android:name="org.codelearn.liftapp.CarpoolDetailActivity"
            android:label="@string/title_activity_carpool_detail_activty" >
        </activity>
    </application>
<uses-permission android:name="android.permission.CALL_PHONE" />
</manifest>
